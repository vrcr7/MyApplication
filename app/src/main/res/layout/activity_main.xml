<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@android:drawable/gallery_thumb"
    android:foregroundTint="#EC4C19"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="328dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Calculadora"
            android:textColor="#21339A"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="384dp"
        android:layout_height="249dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="134dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primer Número"
            android:textColor="#673AB7"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:textAlignment="center" />

        <EditText
            android:id="@+id/primerNum"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:ems="10"
            android:text="0"
            android:textSize="24dp"
            android:digits="1234567890"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Segundo Número"
            android:textColor="#673AB7"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:textAlignment="center" />

        <EditText
            android:id="@+id/segundoNum"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:ems="10"
            android:text="0"
            android:textSize="24dp"
            android:digits="1234567890"
            android:inputType="number" />

        <TextView
            android:id="@+id/etiResultado"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="bottom|center"
            android:text="0"
            android:textColor="#F80418"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="198dp"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/botonSumar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DA9C27B0"
            android:text="Sumar" />

        <Button
            android:id="@+id/botonRestar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DA9C27B0"
            android:text="Restar" />

        <Button
            android:id="@+id/botonMulti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DA9C27B0"
            android:text="Multiplicar" />

        <Button
            android:id="@+id/botonDivi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DA9C27B0"
            android:text="Dividir" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>